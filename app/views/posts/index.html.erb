<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <div class="card my-4">
      <div class="card-header">
        <%= post.name %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.content %></p>
        <%= link_to "Show this post", post, class:"btn btn-primary" %>
      </div>
    </div>

  <% end %>
</div>

